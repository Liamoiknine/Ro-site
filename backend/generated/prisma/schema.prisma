generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Category {
  NECKLACE
  BRACELET
  RING
  EARRINGS
  OTHER
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  images      Json
  price       Float
  category    Category @default(OTHER)
  description String
  details     Json
}
